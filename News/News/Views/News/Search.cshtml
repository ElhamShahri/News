@model IEnumerable<Page>
@{
    ViewData["Title"] = "جستجو";
}

<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>نتایج یافت شده </h3> </header>
    <ul>

        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.ImageName">
                <h2> <a href="/News/@item.PageID"> @item.PageTitle </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate </span>
                <a href="" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
    </ul>
</section>

